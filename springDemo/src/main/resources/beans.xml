<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="user" class="cn.caber.bean.User">
        <property name="name" value="caber"/>
    </bean>

    <bean id="People" class="cn.caber.bean.People" scope="singleton" init-method="init" destroy-method="destroy">
    </bean>

  <bean class="cn.caber.bean.PostProcessor"/>
</beans>